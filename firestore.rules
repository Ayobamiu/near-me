rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own presence data
    match /presence/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read all presence data (for nearby users)
    match /presence/{document} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read and write their own profile data
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read other users' profiles
    match /profiles/{document} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read and write connections they're involved in
    match /connections/{connectionId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.fromUserId || 
         request.auth.uid == resource.data.toUserId);
    }
    
    // Allow authenticated users to create new connections
    match /connections/{connectionId} {
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.fromUserId;
    }
    
    // Allow authenticated users to read and write messages for connections they're part of
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
    }
    
    // Allow authenticated users to create new messages
    match /messages/{messageId} {
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.senderId;
    }
    
    // Allow authenticated users to read all messages (for subscription queries)
    match /messages/{messageId} {
      allow read: if request.auth != null;
    }
  }
}